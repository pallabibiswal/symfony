{% extends "@FOSUser/layout.html.twig" %}

{% block body %}
    {{ parent() }}
    <div class="container col-md-6 border border-primary mt-5">
        <div class="row">
            <div class="col-md-12">
                {{ form_start(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password.first) }}
                {{ form_row(form.password.second) }}
                {{ form_rest(form) }}
                <button type="submit" name="register" class="">Register!</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}